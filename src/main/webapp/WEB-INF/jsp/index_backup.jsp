            }
            
            .login-header .logo {
                font-size: 2.5em;
            }
        }
    </style>
</head>
<body>
    <div class="background-animation"></div>
    <div class="floating-particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>
    
    <div class="login-container">
        <div class="login-header">
            <div class="logo">üìö</div>
            <h1>Êô∫ÊÖßÂõæ‰π¶È¶Ü</h1>
            <p id="subtitle">Áé∞‰ª£ÂåñÂõæ‰π¶ÁÆ°ÁêÜÂπ≥Âè∞</p>
        </div>
        
        <c:if test="${!empty error}">
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i> ${error}
            </div>
        </c:if>
        
        <div id="message-area"></div>
        
        <div class="user-type-selector">
            <button type="button" class="user-type-btn active" onclick="switchUserType('reader')">
                <i class="fas fa-user"></i> ËØªËÄÖÁôªÂΩï
            </button>
            <button type="button" class="user-type-btn" onclick="switchUserType('admin')">
                <i class="fas fa-user-shield"></i> ÁÆ°ÁêÜÂëò
            </button>
        </div>
        
        <form id="loginForm">
            <div class="form-group">
                <i class="fas fa-id-card form-icon"></i>
                <input type="text" class="form-control" id="id" name="id" placeholder="ËØ∑ËæìÂÖ•ËØªËÄÖË¥¶Âè∑" required>
            </div>
            
            <div class="form-group">
                <i class="fas fa-lock form-icon"></i>
                <input type="password" class="form-control" id="passwd" name="passwd" placeholder="ËØ∑ËæìÂÖ•ÂØÜÁ†Å" required>
            </div>
            
            <input type="hidden" name="userType" id="userType" value="reader">
            
            <button type="submit" class="btn-login" id="loginButton">
                <i class="fas fa-sign-in-alt"></i> ÁôªÂΩïÁ≥ªÁªü
            </button>
        </form>
    </div>
    
    <script>
        function switchUserType(type) {
            // ÂàáÊç¢Ê†áÁ≠æÊ†∑Âºè
            $('.user-type-btn').removeClass('active');
            event.target.classList.add('active');
            
            // ËÆæÁΩÆÁî®Êà∑Á±ªÂûã
            document.getElementById('userType').value = type;
            
            // Êõ¥Êñ∞Âç†‰ΩçÁ¨¶ÊñáÊú¨ÂíåÂâØÊ†áÈ¢ò
            if (type === 'admin') {
                document.getElementById('id').placeholder = 'ËØ∑ËæìÂÖ•ÁÆ°ÁêÜÂëòË¥¶Âè∑';
                document.getElementById('subtitle').textContent = 'ÁÆ°ÁêÜÂëòÂêéÂè∞ - Âõæ‰π¶È¶ÜÁÆ°ÁêÜ‰∏≠ÂøÉ';
            } else {
                document.getElementById('id').placeholder = 'ËØ∑ËæìÂÖ•ËØªËÄÖË¥¶Âè∑';
                document.getElementById('subtitle').textContent = 'Áé∞‰ª£ÂåñÂõæ‰π¶ÁÆ°ÁêÜÂπ≥Âè∞';
            }
        }
        
        function showMessage(message, type = 'info') {
            const messageArea = document.getElementById('message-area');
            messageArea.innerHTML = `
                <div class="alert alert-${type}">
                    <i class="fas fa-${type === 'danger' ? 'exclamation-triangle' : 'info-circle'}"></i> ${message}
                </div>
            `;
            setTimeout(() => {
                messageArea.innerHTML = '';
            }, 5000);
        }
        
        // Ë°®ÂçïÈ™åËØÅÂíåÊèê‰∫§
        $(document).ready(function() {
            $('#loginForm').on('submit', function(e) {
                e.preventDefault();
                
                var id = $('#id').val().trim();
                var passwd = $('#passwd').val().trim();
                
                if (!id) {
                    showMessage('ËØ∑ËæìÂÖ•Ë¥¶Âè∑ÔºÅ', 'danger');
                    return false;
                }
                
                if (!passwd) {
                    showMessage('ËØ∑ËæìÂÖ•ÂØÜÁ†ÅÔºÅ', 'danger');
                    return false;
                }
                
                if (isNaN(id)) {
                    showMessage('Ë¥¶Âè∑ÂøÖÈ°ª‰∏∫Êï∞Â≠óÔºÅ', 'danger');
                    return false;
                }
                
                // Ê∑ªÂä†Âä†ËΩΩÊïàÊûú
                $('.btn-login').html('<i class="fas fa-spinner fa-spin"></i> ÁôªÂΩï‰∏≠...');
                $('.btn-login').prop('disabled', true);
                
                // ÂèëÈÄÅÁôªÂΩïËØ∑Ê±Ç
                $.ajax({
                    type: "POST",
                    url: "/loginCheck",
                    data: {
                        id: id,
                        passwd: passwd
                    },
                    dataType: "json",
                    success: function(data) {
                        if (data.stateCode.trim() == "0") {
                            showMessage('Ë¥¶Âè∑ÊàñÂØÜÁ†ÅÈîôËØØÔºÅ', 'danger');
                        } else if (data.stateCode.trim() == "1") {
                            showMessage('ÁÆ°ÁêÜÂëòÁôªÂΩïÊàêÂäüÔºåÊ≠£Âú®Ë∑≥ËΩ¨...', 'info');
                            setTimeout(function() {
                                window.location.href = "/admin_main.html";
                            }, 1500);
                        } else if (data.stateCode.trim() == "2") {
                            showMessage('ËØªËÄÖÁôªÂΩïÊàêÂäüÔºåÊ≠£Âú®Ë∑≥ËΩ¨...', 'info');
                            setTimeout(function() {
                                window.location.href = "/reader_main.html";
                            }, 1500);
                        }
                    },
                    error: function() {
                        showMessage('ÁôªÂΩïËØ∑Ê±ÇÂ§±Ë¥•ÔºåËØ∑Ê£ÄÊü•ÁΩëÁªúËøûÊé•ÔºÅ', 'danger');
                    },
                    complete: function() {
                        // ÊÅ¢Â§çÊåâÈíÆÁä∂ÊÄÅ
                        setTimeout(function() {
                            $('.btn-login').html('<i class="fas fa-sign-in-alt"></i> ÁôªÂΩïÁ≥ªÁªü');
                            $('.btn-login').prop('disabled', false);
                        }, 1000);
                    }
                });
            });
        });
    </script>
</body>
</html>
