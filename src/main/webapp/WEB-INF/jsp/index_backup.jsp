            font-size: 2.2em;
            font-weight: 700;
            margin-bottom: 8px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
        }
        
        .login-header p {
            color: #666;
            font-size: 1.1em;
            font-weight: 400;
        }
        
        /* Áî®Êà∑Á±ªÂûãÈÄâÊã© */
        .user-type-selector {
